@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Stream.Models.Foundations.Videos
@model List<VideoMetadata>

<h2 class="page-title">Video List</h2>
<a asp-action="AddVideo" class="btn btn-add">➕ Add Video</a>

<div class="table-container">
    <table class="modern-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var video in Model)
            {
                <tr>
                    <td>@video.Id</td>
                    <td>@video.Title</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@video.Id" class="btn edit-btn">✏️ Edit</a>
                        <a asp-action="Delete" asp-route-id="@video.Id" class="btn delete-btn">🗑 Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="pagination">
    @{
        int pageGroupSize = ViewBag.PageGroupSize;
        int startPage = ((ViewBag.CurrentPage - 1) / pageGroupSize) * pageGroupSize + 1;
        int endPage = Math.Min(startPage + pageGroupSize - 1, ViewBag.TotalPages);
    }

    @if (startPage > 1)
    {
        <a asp-action="Index" asp-route-page="@(startPage - pageGroupSize)" class="btn pagination-btn">« Previous 10</a>
    }

    @if (ViewBag.CurrentPage > 1)
    {
        <a asp-action="Index" asp-route-page="@(ViewBag.CurrentPage - 1)" class="btn pagination-btn">« Previous</a>
    }

    @for (int i = startPage; i <= endPage; i++)
    {
        if (i == ViewBag.CurrentPage)
        {
            <span class="current-page">@i</span>
        }
        else
        {
            <a asp-action="Index" asp-route-page="@i" class="btn pagination-btn">@i</a>
        }
    }

    @if (ViewBag.CurrentPage < ViewBag.TotalPages)
    {
        <a asp-action="Index" asp-route-page="@(ViewBag.CurrentPage + 1)" class="btn pagination-btn">Next »</a>
    }

    @if (endPage < ViewBag.TotalPages)
    {
        <a asp-action="Index" asp-route-page="@(endPage + 1)" class="btn pagination-btn">Next 10 »</a>
    }
</div>

<style>
    /* Asosiy sahifa uchun */
    .page-title {
        text-align: center;
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 20px;
        color: #333;
    }

    /* "Add Video" tugmasi */
    .btn-add {
        display: block;
        width: 90%;
        max-width: 400px;
        margin: 0 auto 20px;
        padding: 12px;
        font-size: 16px;
        font-weight: bold;
        text-align: center;
        background: #007bff;
        color: white;
        border-radius: 8px;
        text-decoration: none;
        transition: all 0.3s ease;
    }

        .btn-add:hover {
            background: #0056b3;
        }

    /* Jadval uchun konteyner */
    .table-container {
        width: 100%;
        overflow-x: auto;
        padding: 10px;
    }

    /* Jadval uslubi */
    .modern-table {
        width: 100%;
        border-collapse: collapse;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        background: white;
    }

        /* Jadval sarlavhalari */
        .modern-table thead {
            background: #007bff;
            color: white;
        }

        .modern-table th, .modern-table td {
            padding: 12px;
            text-align: center;
            border-bottom: 1px solid #ddd;
        }

        /* Alternativ qatorlar */
        .modern-table tbody tr:nth-child(even) {
            background: #f9f9f9;
        }

    /* Tugmalar */
    .btn {
        display: inline-block;
        padding: 8px 12px;
        font-size: 14px;
        font-weight: bold;
        border-radius: 6px;
        text-decoration: none;
        transition: all 0.3s ease;
    }

    .edit-btn {
        background: #ffc107;
        color: black;
    }

        .edit-btn:hover {
            background: #e0a800;
        }

    .delete-btn {
        background: #dc3545;
        color: white;
    }

        .delete-btn:hover {
            background: #c82333;
        }

    /* Mobil versiya */
    media (max-width: 600px) {
        .modern-table th, .modern-table td

    {
        font-size: 14px;
        padding: 10px;
    }

    .btn {
        font-size: 12px;
        padding: 6px 10px;
    }

    }
</style>
