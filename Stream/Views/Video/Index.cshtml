@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Stream.Models.Foundations.Videos
@model IEnumerable<VideoMetadata>

<h2 class="page-title">Video List</h2>
<a asp-action="AddVideo" class="btn btn-primary">Add Video</a>
<div class="table-container">
    <table class="modern-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var video in Model)
            {
                <tr>
                    <td>@video.Id</td>
                    <td>@video.Title</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@video.Id" class="btn edit-btn">Edit</a>
                        <a asp-action="Delete" asp-route-id="@video.Id" class="btn delete-btn">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<style>
    .page-title {
        font-size: 24px;
        color: #333;
        font-weight: 600;
        margin-bottom: 20px;
    }

    /* Table Container */
    .table-container {
        overflow-x: auto;
    }

    /* Modern Table Styling */
    .modern-table {
        width: 100%;
        border-collapse: collapse;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .modern-table th, .modern-table td {
        padding: 12px 16px;
        text-align: left;
    }

    .modern-table thead {
        background-color: #f4f4f9;
        color: #333;
        font-weight: 600;
    }

    .modern-table tr {
        border-bottom: 1px solid #e0e0e0;
        transition: background-color 0.2s ease;
    }

    .modern-table tr:hover {
        background-color: #f9f9f9;
    }

    /* Buttons */
    .btn {
        padding: 6px 12px;
        border-radius: 6px;
        text-decoration: none;
        font-size: 14px;
        font-weight: 500;
        display: inline-block;
        transition: background-color 0.2s ease, transform 0.1s ease;
    }

    .edit-btn {
        background-color: #4CAF50;
        color: white;
        border: none;
    }

    .edit-btn:hover {
        background-color: #45a049;
        transform: scale(1.05);
    }

    .delete-btn {
        background-color: #f44336;
        color: white;
        border: none;
    }

    .delete-btn:hover {
        background-color: #d32f2f;
        transform: scale(1.05);
    }
</style>